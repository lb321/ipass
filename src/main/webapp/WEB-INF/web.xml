<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" metadata-complete="false" version="3.0">
  <servlet>
    <servlet-name>Jersey REST Service</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>recources</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Jersey REST Service</servlet-name>
    <url-pattern>/restservices/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Inloggen</servlet-name>
    <servlet-class>controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Inloggen</servlet-name>
    <url-pattern>/LoginServlet.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Uitloggen</servlet-name>
    <servlet-class>controller.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Uitloggen</servlet-name>
    <url-pattern>/LogoutServlet.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Verwijderen</servlet-name>
    <servlet-class>controller.VerwijderProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Verwijderen</servlet-name>
    <url-pattern>/VerwijderProductServlet.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Toevoegen</servlet-name>
    <servlet-class>controller.VoegProductToeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Toevoegen</servlet-name>
    <url-pattern>/VoegProductToeServlet.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Wijzigen</servlet-name>
    <servlet-class>controller.WijzigCategorieServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Wijzigen</servlet-name>
    <url-pattern>/WijzigCategorieServlet.do</url-pattern>
  </servlet-mapping>
</web-app>